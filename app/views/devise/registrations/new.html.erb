<div class="login-card">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3  pmd-z-depth-1">
        <div class="login-card">
          <div class="pmd-card-title card-header-border text-center">
            <h3><%= t "layouts.signup.title" %><span><%= t "layouts.signup.with" %><strong><%= t "app.title" %></strong></span></h3>
          </div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="pmd-card-body">
              <div class="form-group pmd-textfield pmd-textfield-floating-label">
                  <%= f.label :name, class: "control-label pmd-input-group-label" %>
                  <div class="input-group">
                    <div class="input-group-addon"><i class="material-icons md-dark pmd-sm">perm_identity</i></div>
                    <%= f.text_field :name, autofocus: true, class: "form-control" %><span class="pmd-textfield-focused"></span>
                  </div>
              </div>
              
              <div class="form-group pmd-textfield pmd-textfield-floating-label">
                  <%= f.label :email, class: "control-label pmd-input-group-label" %>
                  <div class="input-group">
                    <div class="input-group-addon"><i class="material-icons md-dark pmd-sm">email</i></div>
                    <%= f.email_field :email, autofocus: true, class: "form-control" %><span class="pmd-textfield-focused"></span>
                  </div>
              </div>

              <div class="form-group pmd-textfield pmd-textfield-floating-label">
                <%= f.label :password, class: "control-label pmd-input-group-label" %>
                <div class="input-group">
                  <div class="input-group-addon"><i class="material-icons md-dark pmd-sm">lock_outline</i></div>
                  <%= f.password_field :password, autocomplete: "off", class: "form-control" %><span class="pmd-textfield-focused"></span>
                </div>
              </div>

              <div class="form-group pmd-textfield pmd-textfield-floating-label">
                <%= f.label :password_confirmation, class: "control-label pmd-input-group-label" %>
                <div class="input-group">
                  <div class="input-group-addon"><i class="material-icons md-dark pmd-sm">lock_outline</i></div>
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %><span class="pmd-textfield-focused"></span>
                </div>
              </div>
            </div>
            <div class="pmd-card-footer card-footer-no-border card-footer-p16 text-center">
              <div class="actions">
                <%= f.submit t("layouts.signup.title"), class: "btn pmd-ripple-effect btn-primary btn-block" %>
              </div>
              <p class="redirection-link"><%= t "layouts.signup.already_account" %>
                <%= link_to t("layouts.login.title"), new_user_session_path, "data-turbolinks":"false", class: "register-login" %>
              </p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<br>
