      pointBackgroundColor: "transparent"
    }, {
      label: "Highest Price Target",
      data: [null, null, null, null, 2, 5, 6],
      borderColor: '#66f',
      borderDash: [20, 30],
      pointBackgroundColor: "transparent"
    },{
      label: "Average Price Target",
      data: [null, null, null, null, 2, 3, 4],
      backgroundColor: 'rgba(0,255,0,1)',
