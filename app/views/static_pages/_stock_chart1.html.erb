<script>
var lineChartData = {
    labels: ['Jun 2020', 'Sep 2020', 'Dec 2020', 'Mar 2021', 'Jun 2021', 'Dec 2022', 'Jun 2022'],
    datasets: [
    {
      label: "Past 12 Months",
      data: [1, 4, 3, 4, 2, null, null],
      backgroundColor: '#5d5d5e',
